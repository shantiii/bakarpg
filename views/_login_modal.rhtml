<div id="myLoginModal" class="reveal-modal tiny remove-whitespace" data-reveal>
  <div class="row">
    <div class="large-12 columns auth-plain">
      <div class="signup-panel">
        <h3 class="text-center">Login/Register</h3>
        <form>
          <fieldset>
          <div class="row collapse">
            <div class="small-2 columns">
              <span class="prefix"><i class="fi-torso-female"></i></span>
            </div>
            <div class="small-10 columns">
              <input id="modal-username-txt" type="text" placeholder="Minimum of 3 characters">
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <input id="modal-password-txt" type="password" placeholder="Minimum of 8 characters">
            </div>
          </div>
        </fieldset>
        </form>
        <a href="#" id="modal-login-btn" class="button left">Login</a>
        <a href="#" id="modal-register-btn" class="button right">Register</a>
      </div>
    </div>
  </div>
  <a class="close-reveal-modal">&#215;</a>
  <script src="/js/login.js"></script>
</div>   


