<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en" data-useragent="Mozilla/5.0 (compatible; MSIE 10.0; Windows NT 6.2; Trident/6.0)">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title><%= title %></title>
<meta name="description" content="A dinky little RPG chat engine thing made mostly for funsies." />
<meta name="author" content="Shanti Chellaram"/>
<meta name="copyright" content="Shanti Chellaram, Copyright (c) 2014"/>
<link rel="stylesheet" href="/css/foundation.css"/>
<link rel="stylesheet" href="/css/foundation-icons.css"/>
<link rel="stylesheet" href="/css/font-awesome.css"/>
<link rel="stylesheet" href="/css/app.css"/>
<script src="/js/jquery.min.js"></script>
<script src="/js/modernizr.js"></script>
<script src="/js/foundation.min.js"></script>
</head>
<body>

<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name"><h1><a href="/">Baka RPG <small>alpha</small></a></h1></li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      <li class="has-dropdown">
      <a href="/rooms">Chat Rooms</a>
      <ul class="dropdown">
        <li><a href="/rooms/general">#general</a></li>
        <li><a href="/rooms/myrpg">#myrpg</a></li>
      </ul>
      </li>
      <li class="divider"></li>
      <% if logged_in? %>
        <li class="has-dropdown">
      <a href="/users/<%=username%>"><%=username%></a>
      <ul class="dropdown">
        <li><a href="/logout">Logout</a>
      </ul>
      </li>
    <% else %>
        <li class="has-form">
      <a class="radius button" data-reveal-id="myLoginModal">Login</a>
      </li>
    <% end %>
    </ul>
  </section>
</nav>

<%= erb :_login_modal, layout: false %>

<div id="layout-container">
<%= yield %>
</div>

<footer>
  <div class="row">
    <div class="large-6 columns">
      <p class="copyright">&copy; 2014 Shanti Chellaram. All rights reserved.</p>
    </div>
    <div class="large-6 columns">
      <ul class="inline-list right">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/privacy">Privacy</a></li>
        <li><a href="/feedback">Feedback</a></li>
      </ul>
    </div>
  </div>
</footer>

<script src="/js/jquery.min.js"></script>
<script src="/js/foundation.min.js"></script>
<script>
$(document).foundation({
abide: {
patterns:{
username: /^.{3,40}$/,
password: /^.{8,500}$/
}
}
});

var doc = document.documentElement;
doc.setAttribute('data-useragent', navigator.userAgent);
</script>
</body>
</html>
